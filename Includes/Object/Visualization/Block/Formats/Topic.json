{
    "body": {
        "topic": {
            "options": {
                "hide": true
            },
            "body": {
                "default": {
                    "options": {
                        "type": "/Topic"
                    },
                    "data": {
                        "convert": {
                            "id": "topic_id",
                            "text": "topic_text",
                            "name": "topic_name",
                            "edited": "topic_edited",
                            "edited_at": "topic_edited_at",
                            "created": "topic_created"
                        },
                        "type": "topic",
                        "button": {
                            "report": {},
                            "like": {},
                            "unlike": {}
                        }
                    }
                }
            }
        },
        "post": {
            "body": {
                "default": {
                    "options": {
                        "type": "/Post"
                    },
                    "data": {
                        "convert": {
                            "id": "post_id",
                            "text": "post_text",
                            "name": "topic_name",
                            "edited": "post_edited",
                            "edited_at": "post_edited_at",
                            "created": "post_created"
                        },
                        "type": "post",
                        "notice": {
                            "reported": {
                                "hide": true
                            },
                            "deleted": {
                                "hide": true
                            }
                        },
                        "button": {
                            "quote": {},
                            "report": {},
                            "like": {},
                            "unlike": {},
                            "edit": {},
                            "delete": {}
                        }
                    }
                },
                "bottom": {
                    "options": {
                        "hide": true,
                        "template": {
                            "body": "%/PostNew.phtml"
                        }
                    }
                }
            }
        }
    }
}