{
    "body": {
        "forum": {
            "data": {
                "title": ""
            },
            "body": {
                "forum_name": {
                    "options": {
                        "type": "text"
                    },
                    "data": {
                        "title": "L_FORUM_NAME",
                        "placeholder": "L_NAME"
                    }
                },
                "forum_description": {
                    "options": {
                        "type": "text"
                    },
                    "data": {
                        "title": "L_FORUM_DESCRIPTION",
                        "desc": "L_FORUM_DESCRIPTION_DESC",
                        "placeholder": "L_DESCRIPTION"
                    }
                },
                "is_main": {
                    "options": {
                        "type": "checkbox",
                        "on": {
                            "disable": "enable_link"
                        }
                    },
                    "data": {
                        "desc": "L_FORUM_MAIN_DESC",
                        "title": "L_FORUM_MAIN"
                    },
                    "body": {
                        "is_main": {
                            "data": {
                                "value": 1
                            }
                        }
                    }
                },
                "category_id_new": {
                    "options": {
                        "type": "select",
                        "hide": true
                    },
                    "data": {
                        "value": "category_id",
                        "title": "L_FORUM_CATEGORY_CHANGE"
                    },
                    "body": {
                        "default": {
                            "data": {
                                "convert": {
                                    "title": "category_name",
                                    "value": "category_id"
                                }
                            }
                        }
                    }
                },
                "enable_link": {
                    "options": {
                        "type": "radio"
                    },
                    "data": {
                        "title": "L_FORUM_LINK_ENABLE"
                    },
                    "body": {
                        "yes": {
                            "options": {
                                "checked": {
                                    "filled": "forum_link"
                                }
                            },
                            "data": {
                                "value": 1,
                                "title": "L_YES"
                            }
                        },
                        "no": {
                            "options": {
                                "checked": {
                                    "empty": "forum_link"
                                }
                            },
                            "data": {
                                "value": 0,
                                "title": "L_NO"
                            }
                        }
                    }
                },
                "forum_link": {
                    "options": {
                        "type": "text",
                        "on": {
                            "show": "enable_link"
                        }
                    },
                    "data": {
                        "title": "L_FORUM_LINK",
                        "desc": "L_FORUM_LINK_DESC",
                        "placeholder": "L_LINK"
                    }
                }
            }
        },
        "icon": {
            "data": {
                "title": "L_ICON"
            },
            "body": {
                "link": {
                    "options": {
                        "type": "button",
                        "target": "_blank"
                    },
                    "data": {
                        "desc": "L_ICON_LIST_DESC",
                        "icon": "fas fa-icons",
                        "href": "$https://fontawesome.com/icons?d=gallery&p=2&m=free",
                        "title": "L_ICON_LIST",
                        "button": "L_ICON_LIST"
                    }
                },
                "forum_icon": {
                    "options": {
                        "type": "text"
                    },
                    "data": {
                        "title": "L_ICON_NAME",
                        "placeholder": "L_ICON"
                    }
                },
                "forum_icon_style": {
                    "options": {
                        "type": "select"
                    },
                    "data": {
                        "title": "L_ICON_STYLE"
                    },
                    "body": {
                        "fas": {
                            "data": {
                                "value": "fas",
                                "title": "L_FAS"
                            }
                        },
                        "far": {
                            "data": {
                                "value": "far",
                                "title": "L_FAR"
                            }
                        },
                        "fab": {
