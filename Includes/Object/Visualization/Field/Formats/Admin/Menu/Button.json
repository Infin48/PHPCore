{
    "body": {
        "button": {
            "data": {
                "title": ""
            },
            "body": {
                "button_name": {
                    "options": {
                        "type": "text"
                    },
                    "data": {
                        "title": "L_MENU_BUTTON_NAME",
                        "placeholder": "L_NAME"
                    }
                },
                "is_external_link": {
                    "options": {
                        "type": "radio"
                    },
                    "data": {
                        "title": "L_MENU_BUTTON_URL"
                    },
                    "body": {
                        "yes": {
                            "options": {
                                "checked": {
                                    "filled": "button_link"
                                }
                            },
                            "data": {
                                "title": "L_YES",
                                "value": "1"
                            }
                        },
                        "no": {
                            "options": {
                                "checked": {
                                    "empty": "button_link"
                                }
                            },
                            "data": {
                                "title": "L_NO",
                                "value": "0"
                            }
                        }
                    }
                },
                "button_link": {
                    "options": {
                        "type": "text",
                        "on": {
                            "enable": "is_external_link"
                        }
                    },
                    "data": {
                        "title": "L_EXTERNAL_LINK",
                        "desc": "L_MENU_BUTTON_URL_DESC",
                        "placeholder": "L_TEXT"
                    }
                },
                "page_id": {
                    "options": {
                        "type": "select",
                        "empty": "L_MENU_PAGE_NO",
                        "on": {
                            "disable": "is_external_link"
                        }
                    },
                    "data": {
                        "title": "L_MENU_PAGE_LIST",
                        "desc": "L_MENU_PAGE_LIST_DESC"
                    },
                    "body": {
                        "default": {
                            "data": {
                                "convert": {
                                    "title": "page_name",
                                    "value": "page_id"
                                }
                            }
                        }
                    }
                }
            }
        },
        "icon": {
            "data": {
                "title": "L_ICON"
            },
            "body": {
                "link": {
                    "options": {
                        "type": "button",
                        "target": "_blank"
                    },
                    "data": {
                        "desc": "L_ICON_LIST_DESC",
                        "icon": "fas fa-icons",
                        "href": "$https://fontawesome.com/icons?d=gallery&p=2&m=free",
                        "title": "L_ICON_LIST",
                        "button": "L_ICON_LIST"
                    }
                },
                "button_icon": {
                    "options": {
                        "type": "text"
                    },
                    "data": {
                        "title": "L_ICON_NAME",
                        "placeholder": "L_ICON"
                    }
                },
                "button_icon_style": {
                    "options": {
                        "type": "select"
                    },
                    "data": {
                        "title": "L_ICON_STYLE"
                    },
                    "body": {
                        "fas": {
                            "data": {
                                "value": "fas",
                                "title": "L_FAS"
                            }
                        },
                        "far": {
                            "data": {
                                "value": "far",
                                "title": "L_FAR"
                            }
                        },
                        "fab": {
                            "data": {
                                "value": "fab",
                                "title": "L_FAB"
                            }
                        }
                    }
                }
            }
        }
    }
