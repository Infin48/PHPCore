{
    "body": {
        "menu": {
            "body": {
                "collapse": {
                    "options": {
                        "type": "button"
                    },
                    "data": {
                        "icon": "fa-solid fa-bars",
                        "ajax": "collapse-navbar"
                    }
                },
                "default": {
                    "data": {
                        "convert": {
                            "title": "button_name",
                            "href": "button_link",
                            "icon": "button_icon"
                        }
                    },
                    "body": {
                        "default": {
                            "data": {
                                "convert": {
                                    "title": "button_sub_name",
                                    "href": "button_sub_link"
                                }
                            }
                        }
                    }
                }
            }
        },
        "logged": {
            "options": {
                "hide": true
            },
            "body": {
                "conversation": {
                    "options": {
                        "type": "button"
                    },
                    "data": {
                        "type": "button",
                        "icon": "fa-solid fa-envelope",
                        "href": "/user/conversation/"
                    }
                },
                "notification": {
                    "options": {
                        "template": {
                            "root": "Root/Style:/Templates/Blocks/Visualization/Navbar/Notification/Notification.phtml"
                        }
                    },
                    "body": {
                        "default": {
                            "data": {}
                        }
                    }
                },
                "user": {
                    "options": {
                        "type": "dropdown",
                        "template": {
                            "body": "Root/Style:/Templates/Blocks/Visualization/Navbar/User.phtml"
                        }
                    },
                    "data": {
                        "title": ""
                    },
                    "body": {
                        "profile": {
                            "data": {
                                "href": "",
                                "title": "L_NAVBAR.L_PROFILE"
                            }
                        },
                        "user": {
                            "data": {
                                "href": "/user/",
                                "title": "L_NAVBAR.L_USER_PANEL"
                            }
                        },
                        "logout": {
                            "data": {
                                "ajax-action": "logout",
                                "title": "L_NAVBAR.L_LOG_OUT"
                            }
                        }
                    }
                }
            }
        },
        "not-logged": {
            "options": {
                "hide": true
            },
            "body": {
                "login": {
                    "options": {
                        "type": "button"
                    },
                    "data": {
                        "icon": "fa-solid fa-sign-in-alt",
                        "href": "/login/",
                        "title": "L_NAVBAR.L_LOGIN"
                    }
                },
                "register": {
                    "options": {
                        "type": "button",
                        "hide": true
                    },
                    "data": {
                        "icon": "fa-solid fa-user-plus",
                        "href": "/register/",
                        "title": "L_NAVBAR.L_REGISTER"
                    }
                }
            }
        }
    }
}